<% layout('layout/boilerplate') %>

<section class="container" style="max-width: 720px; margin-top: 40px;">
  
  <h1>Create a New App</h1>
  <p class="text-muted">
    Create an app to start authenticating users with AuthWay.
  </p>

  <form action="/apps" method="POST" class="card" style="margin-top: 24px;">
    
    <div class="form-group">
      <label for="name">App Name</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        placeholder="e.g. My SaaS App"
      />
      <small class="form-help">
        This name is only visible to you.
      </small>
    </div>

    <div class="form-group">
      <label for="description">Description (optional)</label>
      <textarea
        id="description"
        name="description"
        rows="3"
        placeholder="What does this app do?"
      ></textarea>
    </div>

    <div class="form-group">
      <label for="callbackUrl">Callback URL (optional)</label>
      <input
        type="url"
        id="callbackUrl"
        name="callbackUrl"
        placeholder="https://yourapp.com/auth/callback"
      />
      <small class="form-help">
        Used later for OAuth & redirects.
      </small>
    </div>

    <div style="margin-top: 28px; display: flex; gap: 12px;">
      <button type="submit" class="btn-primary">
        Create App
      </button>

      <a href="/dashboard" class="btn-secondary">
        Cancel
      </a>
    </div>

  </form>

</section>
