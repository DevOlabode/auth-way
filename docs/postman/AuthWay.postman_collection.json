{
    "info": {
    "name": "AuthWay API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "clientId", "value": "YOUR_CLIENT_ID" },
    { "key": "clientSecret", "value": "YOUR_CLIENT_SECRET" },
    { "key": "endUserToken", "value": "" }
    ],
    "item": [
    {
    "name": "Register End User",
    "request": {
    "method": "POST",
    "header": [
    { "key": "X-Client-Id", "value": "{{clientId}}" },
    { "key": "Authorization", "value": "Bearer {{clientSecret}}" },
    { "key": "Content-Type", "value": "application/json" }
    ],
    "url": "{{baseUrl}}/api/auth/register",
    "body": {
    "mode": "raw",
    "raw": "{\n \"email\": \"user@test.com\",\n \"password\": \"password123\"\n}"
    }
    }
    },
    {
    "name": "Login End User",
    "request": {
    "method": "POST",
    "header": [
    { "key": "X-Client-Id", "value": "{{clientId}}" },
    { "key": "Authorization", "value": "Bearer {{clientSecret}}" },
    { "key": "Content-Type", "value": "application/json" }
    ],
    "url": "{{baseUrl}}/api/auth/login",
    "body": {
    "mode": "raw",
    "raw": "{\n \"email\": \"user@test.com\",\n \"password\": \"password123\"\n}"
    }
    }
    },
    {
    "name": "Get Current User",
    "request": {
    "method": "GET",
    "header": [
    { "key": "Authorization", "value": "Bearer {{endUserToken}}" }
    ],
    "url": "{{baseUrl}}/api/auth/me"
    }
    },
    {
    "name": "Logout End User",
    "request": {
    "method": "POST",
    "header": [
    { "key": "Authorization", "value": "Bearer {{endUserToken}}" }
    ],
    "url": "{{baseUrl}}/api/auth/logout"
    }
    }
    ]
}